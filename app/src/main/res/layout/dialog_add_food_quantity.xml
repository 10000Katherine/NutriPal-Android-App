<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter quantity (in grams)"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editText_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="e.g., 150"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Meal Type"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/radioGroup_meal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"/>

        <RadioButton
            android:id="@+id/radioButton_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"/>
    </RadioGroup>

</LinearLayout>